<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="?attr/actionModeCloseDrawable"
        app:title="@string/app_name">
        <!-- 可以添加其他的view -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_version"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="主页"
            />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/layout_fictionlist"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:background="#BC6BAAA6"
        android:gravity="clip_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_toolbar">
        <!-- 可以添加其他的view -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@android:color/background_dark"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/main_button_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/main_text_user">
            </Button>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游戏"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@android:color/background_dark"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/main_button_gamelist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/main_text_gamelist" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游戏目录"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@android:color/background_dark"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/main_button_gamedir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/main_text_gamedir" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="启动器"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@android:color/background_dark"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/main_button_launchersetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/main_text_launchersetting" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/main_button_launchercontrol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/main_text_launchercontrol" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#ffffff">
            <TextView
                android:id="@+id/logTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:text="@string/main_text_nolog" />
        </ScrollView>
    </LinearLayout>

    <!-- 用户界面 -->
    <LinearLayout
        android:id="@+id/layout_user"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/layout_fictionlist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_toolbar">

        <!-- 可以添加其他的view -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="用户界面"/>
    </LinearLayout>

    <!-- 游戏列表界面 -->
    <LinearLayout
        android:id="@+id/layout_gamelist"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/layout_fictionlist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_toolbar">

        <!-- 可以添加其他的view -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="Minecraft下载器"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="游戏文件"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#EEECEA">

            <Spinner
                android:id="@+id/main_linear3_spinner"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:popupBackground="#BAB8B6">
                <!-- Add other views  -->
            </Spinner>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/main_linear3_flash1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="刷新" />
                <Button
                    android:id="@+id/main_linear3_download1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="下载"/>
            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试解析"
            />

    </LinearLayout>

    <!-- 游戏目录界面 -->
    <LinearLayout
        android:id="@+id/layout_gamedir"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/layout_fictionlist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_toolbar">

        <!-- 可以添加其他的view -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="目录界面"/>
    </LinearLayout>

    <!-- 启动器设置界面 -->
    <LinearLayout
        android:id="@+id/layout_launchersetting"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/layout_fictionlist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_toolbar">

        <!-- 可以添加其他的view -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="启动器设置界面"/>
    </LinearLayout>

    <!-- 虚拟键盘设置界面 -->
    <LinearLayout
        android:id="@+id/layout_launchercontrol"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@id/layout_fictionlist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_toolbar">

        <!-- 可以添加其他的view -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="虚拟键盘设置界面"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>