<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<include
		android:layout_width="550dp"
		android:layout_height="200dp"
		android:layout_centerInParent="true"
		layout="@layout/virtual_keyboard"/>

	<ImageView
		android:layout_height="16dp"
		android:layout_width="16dp"
		android:src="@drawable/cursor"
		android:id="@+id/mouse_cursor"/>

	<LinearLayout
		android:layout_width="270dp"
		android:layout_height="30dp"
		android:layout_marginBottom="0dp"
		android:layout_alignParentBottom="true"
		android:orientation="horizontal"
		android:layout_centerInParent="true"
		android:layout_centerHorizontal="true"
		android:alpha="0.5"
		android:id="@+id/item_bar"
		android:visibility="invisible"
		android:weightSum="9.0">

		<Button
			android:textSize="20sp"
			android:id="@+id/control_1"
			android:background="@drawable/control_button"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1.0"/>

		<Button
			android:textSize="20sp"
			android:id="@+id/control_2"
			android:background="@drawable/control_button"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1.0"/>

		<Button
			android:textSize="20sp"
			android:id="@+id/control_3"
			android:background="@drawable/control_button"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1.0"/>

		<Button
			android:textSize="20sp"
			android:id="@+id/control_4"
			android:background="@drawable/control_button"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1.0"/>

		<Button
			android:textSize="20sp"
			android:id="@+id/control_5"
			android:background="@drawable/control_button"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1.0"/>

		<Button
			android:textSize="20sp"
			android:id="@+id/control_6"
			android:background="@drawable/control_button"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1.0"/>

		<Button
			android:textSize="20sp"
			android:id="@+id/control_7"
			android:background="@drawable/control_button"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1.0"/>

		<Button
			android:textSize="20sp"
			android:id="@+id/control_8"
			android:background="@drawable/control_button"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1.0"/>

		<Button
			android:textSize="20sp"
			android:id="@+id/control_9"
			android:background="@drawable/control_button"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1.0"/>

	</LinearLayout>

	<Button
		android:textSize="20sp"
		android:id="@+id/mouse_primary"
		android:background="@drawable/control_button"
		android:layout_width="54dp"
		android:layout_height="54dp"
		android:text="@string/mouse_primary"
		android:layout_marginLeft="0dp"
		android:layout_marginBottom="122dp"
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true"/>

	<Button
		android:textSize="20sp"
		android:id="@+id/mouse_secondary"
		android:background="@drawable/control_button"
		android:layout_width="54dp"
		android:layout_height="54dp"
		android:text="@string/mouse_secondary"
		android:layout_marginLeft="0dp"
		android:layout_marginBottom="61dp"
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true"/>

	<EditText
		android:textSize="20sp"
		android:id="@+id/input_scanner"
		android:layout_width="54dp"
		android:layout_height="54dp"
		android:layout_marginRight="0dp"
		android:layout_marginTop="0dp"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:ems="10"
		android:background="#DD7F7F7F"
		android:singleLine="true"
		android:inputType="text"
		android:alpha="0.3"
		android:text="&gt;"/>

</RelativeLayout>

